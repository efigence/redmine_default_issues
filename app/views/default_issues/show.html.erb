<h2> show </h2>

<div class="box">
<div class="contextual">
<%= link_to 'Edit', edit_project_default_issue_path(@project, @default_issue), :class => 'icon icon-edit'  %> |
<%= link_to 'Back', project_default_issues_path %>
</div>
  <p id="notice"><%= notice %></p>
  <% unless @default_issue.parent == nil %>
  <p>
    <strong>Parent: </strong>
    <%= @default_issue.parent.id %>
    <strong>Parent Subject:</strong>
    <%= @default_issue.parent.subject %>
  </p>
  <% end %>

  <p>
    <strong>ID:</strong>
    <%= @default_issue.id %>
  </p>

  <p>
    <strong>Subject:</strong>
    <%= @default_issue.subject %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @default_issue.description %>
  </p>

  <p>
    <strong>Estimated hours:</strong>
    <%= @default_issue.estimated_hours %>
  </p>

  <p>
    <strong>Tracker:</strong>
    <%= @default_issue.tracker.name %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= @default_issue.priority.name %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= @default_issue.role.name %>
  </p>
  <p>
    <strong>Start date:</strong>
    <%= @default_issue.start_date %>
  </p>
   <p>
    <strong>Due date:</strong>
    <%= @default_issue.due_date %>
  </p>
  
  <hr />
  <div id="relations">
    <%= render :partial => 'relations' %>
  </div>

</div>


<% content_for :sidebar do %>
    <%= render :partial => 'default_issues/sidebar' %>
<% end %>
<br />
